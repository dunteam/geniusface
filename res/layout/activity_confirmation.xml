<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#449def"
    tools:context=".ConfirmationActivity" >

  	<ImageView 
  	    android:id="@+id/imageConfirmation"
  	    android:contentDescription="@string/image_confirmation"
  	    android:layout_centerInParent="true"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"/>
  	    
  	<LinearLayout 
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:orientation="horizontal"
  	    android:layout_alignParentBottom="true">
  	    
	  	<ImageButton
	  	    android:id="@+id/btnSave"
	  	    android:layout_width="0dp"
	  	    android:layout_height="wrap_content"
	  	    android:layout_weight="1"
	  	    android:onClick="save"
	    	android:contentDescription="@string/save_image"
	    	android:src="@drawable/navigation_accept"
	  	    />
	  	<ImageButton
	  	    android:id="@+id/btnCancel"
	  	    android:layout_width="0dp"
	  	    android:layout_height="wrap_content"
	  	    android:layout_weight="1"
	  	    android:onClick="cancel"
	  	    android:contentDescription="@string/cancel_image"
	  	    android:src="@drawable/navigation_cancel"
	  	    />
	</LinearLayout>
</RelativeLayout>